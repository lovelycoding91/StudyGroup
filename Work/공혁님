num1 = int(input("Enter a number: "))
op = input(("Enter operator: "))
num2 = int(input("Enter a number: "))

if op == "+":
    print(num1 + num2)
elif op == "-":
    print(num1 - num2)
elif op == "/":
    print(num1 / num2)
elif op == "*":
    print(num1 * num2)
else:
    print("It's wrong. Try it again~!")
